<% content_for :javascript_includes do %>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?sensor=true&libraries=places" %>
<%= javascript_include_tag "maps.js" %>
<% end %>

<%= form_for @map, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

      <%= f.hidden_field :latitude %>
      <%= f.hidden_field :longitude %>

  <div class="control-group">
    <%= f.label :Map, :class => 'control-label' %>
    <div class="controls">
      <input id="searchTextField" type="text" style="width:600px">
      <div id="map_canvas" class="gmap_canvas"></div>
      </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                maps_path, :class => 'btn' %>
  </div>
<% end %>